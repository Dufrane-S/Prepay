<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/empty_text"
        android:layout_width="376dp"
        android:layout_height="76dp"
        android:layout_marginTop="28dp"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.457"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/receipt_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2025.01.28"
        app:layout_constraintEnd_toEndOf="@+id/empty_text"
        app:layout_constraintHorizontal_bias="0.141"
        app:layout_constraintStart_toStartOf="@+id/empty_text"
        app:layout_constraintTop_toTopOf="@+id/empty_text" />

    <TextView
        android:id="@+id/use_name"
        android:layout_width="69dp"
        android:layout_height="24dp"
        android:layout_marginTop="12dp"
        android:text="김싸피"
        android:gravity="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/empty_text"
        app:layout_constraintHorizontal_bias="0.074"
        app:layout_constraintStart_toStartOf="@+id/empty_text"
        app:layout_constraintTop_toBottomOf="@+id/receipt_date" />

    <TextView
        android:id="@+id/restaurant_amount"
        android:layout_width="93dp"
        android:layout_height="36dp"
        android:layout_marginTop="21dp"
        android:text="8,000"
        android:gravity="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/empty_text"
        app:layout_constraintHorizontal_bias="0.891"
        app:layout_constraintStart_toStartOf="@+id/empty_text"
        app:layout_constraintTop_toTopOf="@+id/empty_text" />

    <TextView
        android:id="@+id/restaurant_name"
        android:layout_width="131dp"
        android:layout_height="38dp"
        android:layout_marginTop="42dp"
        android:text="꿀맛 식당"
        android:gravity="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/empty_text" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scrollbars="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/restaurant_name" />
</androidx.constraintlayout.widget.ConstraintLayout>