<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.RestaurantDetails.RestaurantDetailsFragment">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="149dp"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="꿀맛 식당"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textbackground"
        android:background="#DCE9F8"
        android:layout_width="265dp"
        android:layout_height="79dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="35dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/recyclerView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button"
        android:background="#D9D9D9"
        android:textSize="20sp"
        android:layout_width="77dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="33dp"
        android:text="요청\n보내기"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textbackground"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="351dp"
        android:layout_height="405dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="82dp"
        android:layout_height="18dp"
        android:layout_marginStart="16dp"
        android:text="선결제 잔액"
        app:layout_constraintBottom_toBottomOf="@+id/textbackground"
        app:layout_constraintStart_toStartOf="@+id/textbackground"
        app:layout_constraintTop_toTopOf="@+id/textbackground"
        app:layout_constraintVertical_bias="0.213" />

    <TextView
        android:id="@+id/totalAmount"
        android:layout_width="154dp"
        android:layout_height="33dp"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="15dp"
        android:text="금액"
        app:layout_constraintBottom_toBottomOf="@+id/textbackground"
        app:layout_constraintEnd_toEndOf="@+id/textbackground" />


</androidx.constraintlayout.widget.ConstraintLayout>